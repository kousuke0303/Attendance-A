<% provide(:title, "基本情報編集") %>
<h1>基本情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: update_basic_info_user_path(@user),
        local: true, method: :patch) do |f| %>
      <%= render "shared/error_messages", object: @user %>
      
      <%= f.label :name, class: "label-basic--info" %>
      <p><%= @user.name %></p>
      
      <%= f.label :department, class: "label-basic--info" %>
      <%= f.text_field :department, class: "form-control" %>
      
      <%= f.label :work_time, class: "label-basic--info" %>
      <%= f.time_field :work_time, class: "form-control" %>
      
      <%= f.label :basic_time, class: "label-basic--info" %>
      <%= f.time_field :basic_time, class: "form-control" %>
      
      <div class="basic-info-center">
        <%= f.submit "更新", class: "btn btn-primary btn--basic-info" %>
        <%= link_to "キャンセル", users_path, class: "btn btn-default btn--basic-info" %>
      </div>
    <% end %>
  </div>
</div>