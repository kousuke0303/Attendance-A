<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed" id="user-table">
    <tr>
      <td>
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-sm btn-primary" %>
        <%= l(@first_day, format: :middle) %> 時間管理表
        <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-sm btn-primary" %>
      </td>
      <td>指定勤務開始時間<br>指定勤務終了時間</td>
      <td colspan="3">基本時間 <%= format_basic_info(@user.basic_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>
    <tr>
      <td>所属：<%= @user.department %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td><p>&thinsp;</p></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
  
  <div class="btn-users-show">
    <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
    <%= link_to "CSV出力", "#" ,class: "btn btn-primary" %><br>
    <%= link_to "勤怠修正ログ(承認済)", "#" ,class: "btn btn-primary" %>
  </div>
  
  <table class="table table-condensed table-bordered table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan=3>残業申請</th>
        <th rowspan=3>日付</th>
        <th rowspan=3>曜日</th>
        <th colspan=8>【実績】</th>
        <th colspan=5>所定外勤務</th>
      </tr>
      <tr>
        <th colspan=3>出社</th>
        <th colspan=3>退社</th>
        <th rowspan=2>在社時間</th>
        <th rowspan=2>備考</th>
        <th colspan=2>終了予定時間</th>
        <th rowspan=2>時間外時間</th>
        <th rowspan=2>業務処理内容</th>
        <th rowspan=2>指示者確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= link_to "残業申請", "#", class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td>
            <% if day.worked_on.wday == 0 %>
              <span id="red"><%= $days_of_the_week[day.worked_on.wday] %></span>
            <% elsif day.worked_on.wday == 6 %>
            <span id="blue"><%= $days_of_the_week[day.worked_on.wday] %></span>
            <% else %>
              <%= $days_of_the_week[day.worked_on.wday] %>
            <% end %>
          </td>
          <td>
            <% floor_str = day.started_at.floor_to(15.minutes) if day.started_at.present? %>
            <%= floor_str.strftime("%H") if floor_str %>
          </td>
          <td>
            <% floor_str = day.started_at.floor_to(15.minutes) if day.started_at.present? %>
            <%= floor_str.strftime("%M") if floor_str %>
          </td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day),
                  method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td>
            <% floor_fin = day.finished_at.floor_to(15.minutes) if day.finished_at.present? %>
            <%= floor_fin.strftime("%H") if floor_fin %>
          </td>
          <td>
            <% floor_fin = day.finished_at.floor_to(15.minutes) if day.finished_at.present? %>
            <%= floor_fin.strftime("%M") if floor_fin %>
          </td>
          <td></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(floor_str, floor_fin) %>
              <% @total_working_times = @total_working_times.to_f + str_times. to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="7">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td rowspan="2"></td>
        <td rowspan="2"></td>
        <td rowspan="2"></td>
        <td rowspan="2"></td>
        <td rowspan="2"></td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="7"><%= format_basic_info(@user.basic_time).to_f * @worked_sum %></td>
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f ) %></td>
      </tr>
    </tfoot>
  </table>
</div>