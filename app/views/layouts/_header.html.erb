<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "勤怠システム", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% unless current_user.admin? %>
            <li><%= link_to "トップへ", user_path(current_user) %></li>
          <% end %>
          <% if current_user.admin? %>
            <li><%= link_to "トップへ", root_path %></li>
            <li><%= link_to "ユーザー一覧", users_path %></li>
            <li><%= link_to "出勤社員一覧", attendancing_index_users_path %></li>
            <li><%= link_to "拠点情報の修正", points_path %></li>
            <li><%= link_to "基本情報の修正", basic_info_update_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% unless current_user.admin? %>
                <li><%= link_to "勤怠情報", user_path(current_user) %></li>
              <% end %>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "トップへ", root_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>